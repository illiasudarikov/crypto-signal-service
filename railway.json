{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "node server.js",
    "regions": ["us-east1"],
    "cron": {
      "enabled": true,
      "expression": "0 * * * *",
      "command": "node signal_service_with_telegram.js --top=10"
    }
  }
}
